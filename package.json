{
  "name": "react-better-example",
  "version": "0.3.0",
  "main": "dist/app.js",
  "scripts": {
    "build:vendor": "browserify js/vendor.jsx -t babelify --extension=.jsx -u react -g global-react -o dist/vendor.js",
    "build:app": "browserify js/app.jsx -d -t babelify --extension=.jsx -u react -g global-react -o dist/app.js",
    "build:js": "npm run build:vendor && npm run build:app",
    "build:css": "cat css/app.css > dist/all.css",
    "build:html": "echo '{\"dist\":\".\",\"ts\"':$(date +%s)} | mustache - html/index.html > dist/index.html",
    "build:html:cdn": "echo '{\"dist\":\".\",\"ts\"':$(date +%s)} | mustache - html/index.html > dist/index.html",
    "build": "npm run build:js && npm run build:css && npm run build:html && npm run copy",
    "copy": "cp node_modules/global-react/global.react.js dist/",
    "uglify:js": "ls dist/*.js | xargs -I {} uglifyjs {} -c -o {}",
    "publish": "npm run build && npm run build:html:cdn && npm run uglify:js",
    "watch": "node gulpfile.js",
    "lint": "find js -name '*.jsx' | xargs jsxhint -c ~/.jshintrc",
    "clean": "rm -rf dist/*"
  },
  "repository": "github:wizawu/react-better-example",
  "author": "wizawu",
  "license": "MIT",
  "devDependencies": {
    "babelify": "^6.3.0",
    "browserify-lite2": "latest",
    "global-react": "latest",
    "mustache": "^2.1.3",
    "node-watch": "^0.3.4",
    "uglify-js": "^2.4.24"
  },
  "dependencies": {
    "events": "^1.0.2",
    "flux": "^2.0.3",
    "i18next-client": "^1.10.2",
    "mockxhr": "*",
    "react": "^0.13.3",
    "react-router": "^0.13.3"
  }
}
