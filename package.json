{
  "name": "react-better-example",
  "version": "0.2.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "build:tsx": "tsc --jsx react -m commonjs --outDir dist/build --rootDir js js/*.tsx js/*/*.tsx",
    "build:vendor": "browserify dist/build/vendor.js -u react -g global-react -o dist/vendor.js",
    "build:app": "browserify dist/build/app.js -u react -g global-react -o dist/app.js",
    "build:js": "npm run build:tsx && npm run build:vendor && npm run build:app && rm -rf dist/build",
    "clean": "rm -rf dist",
    "uglify:js": "ls dist/*.js | xargs -I {} uglify -s {} -o {}",

    "lint": "echo 'js\\njsx' | xargs -I {} find js -name *.{} | xargs node_modules/.bin/jsxhint -c ~/.jshintrc",
    "publish": "node_modules/.bin/gulp publish && npm run uglify",
    "watch": "node_modules/.bin/gulp"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wizawu/react-better-example.git"
  },
  "keywords": [
    "react",
    "example",
    "template"
  ],
  "author": "wizawu",
  "license": "MIT",
  "devDependencies": {
    "babelify": "*",
    "browserify": "*",
    "browserify-lite2": "0.0.2",
    "global-react": "*",
    "gulp": "*",
    "gulp-concat": "*",
    "gulp-template": "*",
    "jsxhint": "^0.12.0",
    "typescript": "^1.6.2",
    "uglify": "*",
    "vinyl-source-stream": "*",
    "watchify": "*"
  },
  "dependencies": {
    "events": "^1.0.2",
    "flux": "^2.0.3",
    "i18next-client": "^1.10.2",
    "mockxhr": "*",
    "react": "^0.13.3",
    "react-router": "^0.13.3"
  }
}
