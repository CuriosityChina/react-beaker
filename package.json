{
  "name": "react-better-example",
  "version": "0.2.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "build:tsx": "tsc --jsx react -m commonjs --outDir dist/build --rootDir js js/*.tsx js/*/*.tsx",
    "build:vendor": "browserify dist/build/vendor.js -u react -g global-react -o dist/vendor.js",
    "build:app": "browserify dist/build/app.js -u react -g global-react -o dist/app.js",
    "build:js": "npm run build:tsx && npm run build:vendor && npm run build:app",
    "build:css": "cat css/app.css > dist/all.css",
    "build:html": "sed -e 's/<%= ts %>/'$(date +%s)'/g' -e 's/<%= dist %>/./g' html/index.html > dist/index.html",
    "build:html:cdn": "sed -e 's/<%= ts %>/'$(date +%s)'/g' -e 's/<%= dist %>/./g' html/index.html > dist/index.html",
    "build": "npm run build:js && npm run build:css && npm run build:html && npm run copy",
    "copy": "cp node_modules/global-react/global.react.js dist/",
    "uglify:js": "ls dist/*.js | xargs -I {} uglifyjs {} -c -o {}",
    "publish": "npm run build && rm -rf dist/build && npm run build:html:cdn && npm run uglify:js",
    "watch": "node gulpfile.js",
    "lint": "find js -name '*.tsx' | xargs tslint",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wizawu/react-better-example.git"
  },
  "keywords": [
    "react",
    "example",
    "template"
  ],
  "author": "wizawu",
  "license": "MIT",
  "devDependencies": {
    "browserify-lite2": "0.0.2",
    "global-react": "*",
    "node-watch": "^0.3.4",
    "tslint": "^2.5.0",
    "typescript": "^1.6.2",
    "uglify-js": "^2.4.24"
  },
  "dependencies": {
    "events": "^1.0.2",
    "flux": "^2.0.3",
    "i18next-client": "^1.10.2",
    "mockxhr": "*",
    "react": "^0.13.3",
    "react-router": "^0.13.3"
  }
}
